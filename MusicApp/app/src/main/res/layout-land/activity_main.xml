<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="6dp"
    tools:layout_editor_absoluteY="-3dp">

    <ImageButton
        android:id="@+id/botonVerLetra"
        android:layout_width="82.dp"
        android:layout_height="69.dp"
        android:background="@drawable/roundcorner"
        app:layout_constraintBottom_toTopOf="@+id/barraVolumen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/botonVerLista"
        app:layout_constraintTop_toBottomOf="@+id/barraDuraccion"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/botonVerLista"
        android:layout_width="82.dp"
        android:layout_height="69.dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/roundcorner"
        app:layout_constraintBottom_toTopOf="@+id/barraVolumen"
        app:layout_constraintEnd_toStartOf="@+id/botonVerLetra"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/botonCompartir"
        app:layout_constraintTop_toBottomOf="@+id/barraDuraccion"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="599dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/botonCompartir"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageDisco"
        tools:layout_editor_absoluteY="1dp" />

    <ImageButton
        android:id="@+id/botonCompartir"
        android:layout_width="82.dp"
        android:layout_height="69.dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/roundcorner"
        app:layout_constraintBottom_toTopOf="@+id/barraVolumen"
        app:layout_constraintEnd_toStartOf="@+id/botonVerLista"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/barraDuraccion"
        app:srcCompat="@android:drawable/ic_menu_share"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/botonPlay"
        android:layout_width="82.dp"
        android:layout_height="69.dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundcorner"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/barraDuraccion"
        app:layout_constraintEnd_toStartOf="@+id/buttonSiguiente"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonAnterior"
        app:layout_constraintTop_toBottomOf="@+id/textCancion"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <SeekBar
        android:id="@+id/barraVolumen"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:maxHeight="3dp"
        android:minHeight="3dp"
        android:progress="70"
        android:progressDrawable="@drawable/volume_seekbar"
        android:thumbTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/volumenIcon"
        app:layout_constraintTop_toBottomOf="@+id/botonVerLetra" />

    <ImageView
        android:id="@+id/volumenIcon"
        android:layout_width="65dp"
        android:layout_height="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/barraVolumen"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/botonCompartir"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

    <ImageView
        android:id="@+id/imageDisco"
        android:layout_width="477dp"
        android:layout_height="580dp"
        app:srcCompat="@drawable/discoimagen"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="13dp" />

    <ImageButton
        android:id="@+id/buttonSiguiente"
        android:layout_width="82.dp"
        android:layout_height="69.dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundcorner"
        app:layout_constraintBottom_toTopOf="@+id/barraDuraccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/botonPlay"
        app:layout_constraintTop_toBottomOf="@+id/textCancion"
        app:srcCompat="@android:drawable/ic_media_ff"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/buttonPause"
        android:layout_width="82.dp"
        android:layout_height="69.dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundcorner"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/barraDuraccion"
        app:layout_constraintEnd_toStartOf="@+id/buttonSiguiente"
        app:layout_constraintStart_toEndOf="@+id/buttonAnterior"
        app:layout_constraintTop_toBottomOf="@+id/textCancion"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <TextView
        android:id="@+id/textCancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/nombreCancion"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnterior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/textGrupo" />

    <ImageButton
        android:id="@+id/buttonAnterior"
        android:layout_width="82.dp"
        android:layout_height="69.dp"
        android:background="@drawable/roundcorner"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/barraDuraccion"
        app:layout_constraintEnd_toStartOf="@+id/botonPlay"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/textCancion"
        app:srcCompat="@android:drawable/ic_media_rew" />

    <TextView
        android:id="@+id/textGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-80dp"
        android:text="@string/nombreGrupo"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textCancion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/barraDuraccion"
        android:layout_width="430dp"
        android:layout_height="22dp"
        android:layout_marginBottom="100dp"
        android:max="100"
        android:maxHeight="3dp"
        android:minHeight="3dp"
        android:progress="25"
        android:progressDrawable="@drawable/volume_seekbar"
        android:thumbTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/botonVerLetra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/buttonSiguiente" />

    <TextView
        android:id="@+id/textTiempoInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="80dp"
        android:text="@string/tiempoInicio"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/botonCompartir"
        app:layout_constraintEnd_toStartOf="@+id/textTiempoFin"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/barraDuraccion" />

    <TextView
        android:id="@+id/textTiempoFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginBottom="80dp"
        android:text="@string/tiempoFin"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/botonVerLetra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textTiempoInicio"
        app:layout_constraintTop_toBottomOf="@+id/barraDuraccion" />

</androidx.constraintlayout.widget.ConstraintLayout>